<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rectangle_bg_green_a100_b7_border_black_900_radius_20"
    tools:context=".joinusMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One Step To Go!"
        android:textColor="#0d6e6a"
        android:textSize="35dp"
        android:textStyle="bold" />

    <!-- Remove the "Create a new account" text -->

    <TextView
        android:id="@+id/Main_Login"
        style="@style/profileStyledBackButton3"
        android:text="Login"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/Main_reg"
        style="@style/profileStyledBackButton3"
        android:text="Register"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_marginTop="30dp"/>

</LinearLayout>
