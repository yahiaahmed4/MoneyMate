<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/linearAddPayment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/groupStylegreen_A100_01"
        tools:context=".add_payment">


        <LinearLayout android:id="@+id/linearAddPaymenttemp"
            android:layout_height="750dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_15pxv"
            android:paddingEnd="@dimen/_20pxh"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="@dimen/_15pxv"

            style="@style/groupStylegreen_A100_01">





        <LinearLayout android:id="@+id/linearColumnundrawcre"
            android:layout_height="620dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingEnd="9dp"
            android:paddingStart="9dp"
            android:paddingTop="52dp"
            android:layout_marginTop="60dp"
            style="@style/groupStylewhite_A700cornerRadius">
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <EditText
                android:background="@drawable/rectangle_bg_blue_gray_100_radius_15"
                android:ellipsize="end"
                android:hint="Name"
                android:id="@+id/Namee"
                android:textSize="15dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:paddingBottom="9dp"
                android:paddingEnd="17dp"
                android:paddingStart="17dp"
                android:paddingTop="9dp"
                android:singleLine="true"
                android:textColorHint="@color/black_900_8c"
                style="@style/etSolidRounded"
                tools:ignore="Autofill"/>
            <EditText
                android:background="@drawable/rectangle_bg_blue_gray_100_radius_15"
                android:ellipsize="end"
                android:hint="Card Number"
                android:id="@+id/CardNu"
                android:textSize="15dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:paddingBottom="9dp"
                android:paddingEnd="17dp"
                android:paddingStart="17dp"
                android:paddingTop="9dp"
                android:singleLine="true"
                android:textColorHint="@color/black_900_8c"
                style="@style/etSolidRounded"
                tools:ignore="Autofill"/>
            <EditText
                android:background="@drawable/rectangle_bg_blue_gray_100_radius_15"
                android:ellipsize="end"
                android:hint="Amount"
                android:id="@+id/amount"
                android:textSize="15dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:paddingBottom="9dp"
                android:paddingEnd="17dp"
                android:paddingStart="17dp"
                android:paddingTop="9dp"
                android:singleLine="true"
                android:textColorHint="@color/black_900_8c"
                style="@style/etSolidRounded"
                tools:ignore="Autofill"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPay"
                style="@style/btnSolidRounded_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25pxh"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/_25pxh"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_11pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingBottom="@dimen/_11pxv"
                android:singleLine="true"
                android:text="@string/lbl_pay"
                android:textAllCaps="false"
                tools:text="@string/lbl_pay" />
        </LinearLayout>

        </LinearLayout>

    <LinearLayout

        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="end"

    android:paddingBottom="12dp"

        >

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6DEE1"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/navmenu" />

</LinearLayout>

